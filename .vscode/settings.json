{
    "java.compile.nullAnalysis.mode": "automatic",
    "java.configuration.updateBuildConfiguration": "automatic",
    
    // Disable auto-formatting for JSP/HTML files to prevent breaking JSTL tags like <c:forEach>
    "[html]": {
        "editor.formatOnSave": false,
        "editor.formatOnType": false,
        "editor.formatOnPaste": false
    },
    "files.associations": {
        "*.jsp": "html"
    },
    // Global format settings - you can enable for other file types
    "editor.formatOnSave": false
}